<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
  {featuredProjects.map((project) => (
    <a
      href={project.url}
      target="_blank"
      rel="noopener noreferrer"
      class="terminal-window card-hover block"
    >
      <div class="terminal-header">
        <span class="terminal-dot bg-terminal-red"></span>
        <span class="terminal-dot bg-terminal-yellow"></span>
        <span class="terminal-dot bg-terminal-green"></span>
        <span class="ml-4 text-terminal-muted text-xs">{project.org}/{project.name}</span>
      </div>
      <div class="p-4 space-y-3">
        <div>
          <h3 class="font-bold text-terminal-accent">{project.name}</h3>
          <p class="text-terminal-muted text-sm mt-1 line-clamp-2">{project.description}</p>
        </div>

        <div class="grid grid-cols-3 gap-2 text-xs">
          <div class="bg-terminal-bg rounded p-2 text-center">
            <div class="text-terminal-accent font-bold">{project.fileCount}</div>
            <div class="text-terminal-muted">files</div>
          </div>
          <div class="bg-terminal-bg rounded p-2 text-center">
            <div class="text-terminal-accent font-bold">{project.commits}</div>
            <div class="text-terminal-muted">commits</div>
          </div>
          <div class="bg-terminal-bg rounded p-2 text-center">
            <div class="text-terminal-green font-bold">{project.deliveryTime}</div>
            <div class="text-terminal-muted">delivery</div>
          </div>
        </div>

        <div class="flex items-center justify-between text-xs text-terminal-muted">
          <span>{project.firstCommit} → {project.lastCommit}</span>
          <span class="text-terminal-accent">{project.totalSize}</span>
        </div>

        <div class="flex flex-wrap gap-1">
          {project.tags.map((tag) => (
            <span class={`tag text-xs ${tagColors[tag] || ''}`}>{tag}</span>
          ))}
        </div>
      </div>
    </a>
  ))}
</div>

<div class="text-center mt-8">
